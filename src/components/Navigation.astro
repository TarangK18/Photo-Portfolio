---
import { Icon } from 'astro-icon';
import InstagramLink from './InstagramLink.astro';

const navItems = [
  { text: "Home", href: "/" },
  { text: "Gallery", href: "/gallery" },
  { text: "Videos", href: "/videos" },
  { text: "About", href: "/about" },
  { text: "Contact", href: "/contact" },
];
---

<nav class="fixed w-full z-50 bg-white/95 backdrop-blur-sm transition-all duration-300 shadow-sm" id="navbar">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-20">
      <a href="/" class="text-2xl font-bold text-navy flex items-center gap-2">
        <span class="text-teal">Photo</span>Folio
      </a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center gap-8">
        <ul class="flex gap-8">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-navy hover:text-teal transition-all duration-300 relative group font-medium"
              >
                {item.text}
                <span class="absolute left-0 bottom-0 w-0 h-0.5 bg-teal transition-all duration-300 group-hover:w-full"></span>
              </a>
            </li>
          ))}
        </ul>
        <InstagramLink className="text-navy hover:text-teal" showText={false} />
      </div>

      <!-- Mobile Menu Button -->
      <button class="md:hidden text-navy" id="menuButton">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="md:hidden hidden bg-white/95 backdrop-blur-sm" id="mobileMenu">
    <div class="container mx-auto px-4 py-4">
      <ul class="space-y-4">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="block text-navy hover:text-teal transition-colors py-2 font-medium"
            >
              {item.text}
            </a>
          </li>
        ))}
        <li>
          <InstagramLink className="text-navy hover:text-teal py-2" />
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  const navbar = document.getElementById('navbar');
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  // Navbar scroll effect
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar.classList.add('shadow-lg');
    } else {
      navbar.classList.remove('shadow-lg');
    }
  });

  // Mobile menu toggle
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>